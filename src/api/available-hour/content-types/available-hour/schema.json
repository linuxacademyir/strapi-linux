{
  "kind": "collectionType",
  "collectionName": "available_hours",
  "info": {
    "singularName": "available-hour",
    "pluralName": "available-hours",
    "displayName": "Available Hour",
    "description": "Define day-of-week and time ranges for availability"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "day": {
      "type": "enumeration",
      "enum": [
        "monday",
        "tuesday",
        "wednesday",
        "thursday",
        "friday",
        "saturday",
        "sunday"
      ],
      "required": true
    },
    "timeMin": {
      "type": "time",
      "required": true
    },
    "timeMax": {
      "type": "time",
      "required": true
    },
    "dayOff": {
      "type": "boolean",
      "default": false
    }
  }
}
